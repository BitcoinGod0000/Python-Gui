import tkinter as tk

# Create a window
window = tk.Tk()

# Set the window title
window.title("TUTORIAL")

# Set the background color to black
window.configure(background="black")

# Set the window size
window.geometry("600x400")  # Set your desired width and height

# Create a label with purple neon outline effect
label = tk.Label(window, text="Tut", fg="white", bg="black")
label.config(font=("Helvetica", 24, "bold"))
label.config(highlightbackground="purple", highlightthickness=3, highlightcolor="purple")

# Place the label in the window
label.pack(pady=50)

# Start the Tkinter event loop
window.mainloop()
